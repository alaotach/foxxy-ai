{
  "manifest_version": 3,
  "name": "Foxy AI",
  "version": "1.0.1",
  "description": "AI-powered browser automation agent with voice commands",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "downloads",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/logo.png",
      "32": "icons/logo.png",
      "48": "icons/logo.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js"
      ],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "ppn/*.ppn",
        "ppn/*.pv",
        "tts-models/*",
        "tts-models/voice_styles/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
