{
  "manifest_version": 3,
  "name": "Foxy AI",
  "version": "1.0.1",
  "description": "AI-powered browser automation agent that works on your current page",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/noFilter.webp",
      "32": "icons/noFilter.webp",
      "48": "icons/noFilter.webp"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js"
      ],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/noFilter.webp",
    "32": "icons/noFilter.webp",
    "48": "icons/noFilter.webp",
    "128": "icons/noFilter.webp"
  }
}
